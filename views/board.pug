extends layout

block content
  h1= title
  p Number of rows #{query.rows}
  p Number of columns #{query.cols}

  - let rows=Number(query.rows)
  - let cols=Number(query.cols)

  if !(Number.isInteger(rows)) && !(Number.isInteger(cols))
    p incorrect rows or columns
  else if (rows<1) && (rows>10)
    p rows are out of range
  else if (cols<1) && (cols>10)
    p cols are out of range
  else
   table#outer
  - for (let i = 0; i < rows; i++) 
    tr#middle
      - for (let j = 0; j < cols; j++) 
        - let cellValue = 0
        if (i == j)
          - cellValue = 1
        else if (i == j + 1)
          - cellValue = 2
        else if (i == j - 1)
          - cellValue = i
        td(style=`width: ${100 / cols}%;`) #{cellValue}
